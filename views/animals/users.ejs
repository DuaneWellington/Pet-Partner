<%- include('../partials/header') %>


<h2>Tell Us About Yourself!</h2>
<form id="user-form" action="/users" method="POST">
  <label>First Name:
    <input type="String" name="userInfo.firstName">
  </label>

  <label>Last Name:
    <input type="String" name="userInfo.lastName">
  </label>

  <label>Age:
    <input type="Number" name="fosterAge">
  </label><br>

  <label>Street Address 1:
    <input type="String" name="userInfo.address.street1">
  </label><br>
  <label>Street Address 2:
    <input type="String" name="userInfo.address.street2">
  </label><br>
  <label>City:
    <input type="String" name="userInfo.address.city">
  </label><br>
  <label>State/Province:
    <input type="String" name="userInfo.address.fosterState">
  </label><br>
  <label>Zip/Postal:
    <input type="String" name="userInfo.address.postalCode">
  </label><br>

  <label>Country:
    <select name="Country">
          <option value="CANADA">CANADA</option>
          <option value="UNITED STATES">UNITED STATES</option>
    </select>
  </label><br>


  <label>Phone No:
    <input type="number" name="phoneNo">
  </label><br>
  <label>Foster Start Date:
    <input type="date" name="fosterStartDate">
  </label><br>
  <label>email:
    <input type="String" name="emailAddress">
  </label><br>

  <label>Foster Duration:
    <input type="checkbox" name="twoWeeks" checked> Two Weeks
    <input type="checkbox" name="oneMonth"> One Month
    <input type="checkbox" name="threeMonths"> Three Months
    <input type="checkbox" name="sixMonths"> Six Months
  </label><br>

  <button type="submit">Submit Form</button>
</form>


<%- include('../partials/footer') %>



